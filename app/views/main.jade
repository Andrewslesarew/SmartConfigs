.col-sm-4(ng-repeat='actor in mainCtrl.actors')
  .item__extended-preview-container.item__status(class="{{ actor.status }}")
    .item__element.item__title {{ actor.title }}
    .item__element.item__description {{ actor.description }}

    .item__element.item__note_container
      img.item__note.icon(src="http://icons.iconarchive.com/icons/custom-icon-design/mono-business-2/16/calendar-icon.png")
      .item__note.text {{ actor.addingDate | date : 'dd MMMM yyyy' }}
    .item__element.item__note_container
      img.item__note.icon(src="http://icons.iconarchive.com/icons/designbolts/seo/16/Time-Management-icon.png")
      .item__note.text {{ actor.liveTime | date : 'HH:mm' }}
    .item__footer-container
      .item__footer(ng-click="mainCtrl.toStar(actor)")
        img.item__footer-img(src="http://icons.iconarchive.com/icons/custom-icon-design/pretty-office-3/48/Star-Full-icon.png" ng-show=" actor.starred ")
        img.item__footer-img(src="http://icons.iconarchive.com/icons/custom-icon-design/pretty-office-3/48/Star-Empty-icon.png" ng-hide=" actor.starred ")
      .item__footer.notification
        img.item__footer-img.item__footer-notification_item(src="http://icons.iconarchive.com/icons/double-j-design/electronics/48/TO-220-icon.png")
        .item__footer-notification_text.item__footer-notification_item start3